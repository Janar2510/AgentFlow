# Environment Configuration for AgentFlow

# Database Configuration
DATABASE_URL=postgresql://agentflow:password@localhost:5432/agentflow
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_SECRET_KEY=your-super-secret-key-change-this-in-production
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws

# AI Provider Configuration
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-key

# Authentication
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Storage
STORAGE_TYPE=local  # local, s3, gcs
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=agentflow-storage
AWS_REGION=us-east-1

# Monitoring & Logging
LOG_LEVEL=INFO
SENTRY_DSN=https://your-sentry-dsn
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=admin

# Kubernetes Configuration (for production)
K8S_NAMESPACE=agentflow
K8S_IMAGE_REGISTRY=registry.agentflow.dev
K8S_CLUSTER_NAME=agentflow-cluster

# Email Configuration (for notifications)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=noreply@agentflow.dev
EMAIL_SMTP_PASSWORD=your-email-password
EMAIL_FROM=AgentFlow <noreply@agentflow.dev>

# Feature Flags
FEATURE_MARKETPLACE_ENABLED=true
FEATURE_COLLABORATIVE_EDITING=true
FEATURE_ADVANCED_ANALYTICS=false

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Development Settings
DEV_AUTO_RELOAD=true
DEV_CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]